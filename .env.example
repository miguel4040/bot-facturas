# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=facturas_db
DB_USER=postgres
DB_PASSWORD=yourpassword

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# API de Facturaci贸n de Terceros - FacturaCFDI (SOAP)
# Entorno: development (pruebas) o production
FACTURACION_ENVIRONMENT=development

# URLs WSDL - Con Token (recomendado para mayor seguridad)
FACTURACION_WSDL_DEV_TOKEN=https://dev33.facturacfdi.mx/WSForcogsaService?wsdl
FACTURACION_WSDL_PROD_TOKEN=https://v33.facturacfdi.mx/WSForcogsaService?wsdl

# URLs WSDL - Sin Token (alternativa)
FACTURACION_WSDL_DEV_SIMPLE=https://dev33.facturacfdi.mx/WSTimbradoCFDIService?wsdl
FACTURACION_WSDL_PROD_SIMPLE=https://v33.facturacfdi.mx/WSTimbradoCFDIService?wsdl

# Credenciales de Pruebas
FACTURACION_USER_DEV=pruebasWS
FACTURACION_PASSWORD_DEV=pruebasWS

# Credenciales de Producci贸n (cambiar cuando tengas acceso real)
FACTURACION_USER_PROD=your_production_user
FACTURACION_PASSWORD_PROD=your_production_password

# Configuraci贸n adicional
FACTURACION_USE_TOKEN=true
FACTURACION_TIMEOUT=30000

# WhatsApp Integration (ejemplo con Twilio)
WHATSAPP_ENABLED=false
WHATSAPP_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# OCR Configuration
OCR_LANGUAGE=spa
OCR_CONFIDENCE_THRESHOLD=60

# OpenAI / ChatGPT (Opcional - para mejorar extracci贸n cuando confianza es baja)
OPENAI_ENABLED=false
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_CONFIDENCE_THRESHOLD=75
